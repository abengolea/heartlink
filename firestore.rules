rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to studies collection
    match /studies/{studyId} {
      allow read, write: if true; // For now, allow all access - adjust based on your auth requirements
    }
    
    // Allow read/write access to patients collection
    match /patients/{patientId} {
      allow read, write: if true; // For now, allow all access - adjust based on your auth requirements
    }
    
    // Deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}